<aura:component description="Dropzone">

    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    <aura:handler event="c:DragAndDrop_Event" name="onDragStart" action="{!c.onDragStart}" includeFacets="true"/>

    <aura:registerEvent name="onDrop" type="c:DragAndDrop_Event"/>
    <aura:registerEvent name="onDrag2" type="c:DragAndDrop_Event"/>

    <aura:attribute name="id" type="Integer" access="public"/>
    <aura:attribute name="elements" type="List" required="true"/>

    <aura:attribute name="style" type="String" access="global"/>

    <div style="{!v.style}" class="dropzone" ondrop="{!c.onDrop}" ondragover="{!c.onDragOver}" ondragleave="{!c.hideZone}" aura:id="dropzone">

            {!v.body}

    </div>

</aura:component>