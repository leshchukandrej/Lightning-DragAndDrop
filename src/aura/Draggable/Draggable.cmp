<aura:component description="Draggable">

    <aura:attribute name="obj" type="Object" required="true"/>
    <aura:attribute name="index" type="Decimal"/>

    <aura:registerEvent name="onDragStart" type="c:DragAndDrop_Event"/>
    <aura:registerEvent name="onDragStopped" type="c:DragAndDrop_Event"/>

    <div aura:id="draggable" draggable="true" id="{!v.index}" class="draggable" ondragover="{!c.lightElement}"
         ondrop="{!c.hideElement}" ondragleave="{!c.hideElement}" ondragstart="{!c.dragStart}" ondragend="{!c.dragEnd}">

            {!v.body}

    </div>


</aura:component>